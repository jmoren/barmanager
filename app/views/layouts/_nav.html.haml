.ui.menu.inverted.fixed
  .container
    = link_to "Bar Manager", home_index_path, class: "item"
    - if current_user
      .ui.dropdown.item.config
        %i.dropdown.icon
        Configuracion
        .menu
          = link_to items_path, class: "item" do
            Items
          = link_to promotions_path, class: "item" do
            Promociones
          = link_to categories_path, class: "item" do
            Categorias
          = link_to new_table_path, class: "item" do
            Agregar Mesa
          = link_to users_path, class: "item" do
            Usuarios
          = link_to statistics_path, class: "item" do
            Estadisticas
      = link_to clients_path, class: "item" do
        %i.icon.users
        Clientes
      = link_to tickets_path, class: "item" do
        %i.icon.file
        Tickets
      = link_to shifts_path, class: "item" do
        %i.icon.time
        Turnos
      - if current_user.admin?
        = link_to daily_cashes_path, class: "item" do
          %i.icon.lock
          Cierres Diario
      = link_to "#", class: "launch item" do
        %i.icon.star
        Favoritos
      - if current_user
        .menu.right
          .ui.dropdown.item.config
            %i.dropdown.icon
            = current_user.login
            .menu
              = link_to close_day_path, class: "item" do
                Cerrar dia
              = link_to close_month_monthly_cashes_path, class: "item" do
                Cerrar mes
              = link_to destroy_user_session_path, method: :delete, class: "item" do
                Salir
