%h2.ui.header
  Clientes
.ui.header.right.floated
  = form_tag clients_path, :method => :get do
    .ui.left.input
      = text_field_tag "name", "", placeholder: "Nombre del cliente"
    = submit_tag "Buscar", class: "ui button blue"
    = link_to 'Limpiar', clients_path, class: "ui button green"
  = paginate @clients

%table.ui.table
  %thead
    %tr
      %th Name
      %th Deuda
      %th
  %tbody
    - @clients.each do |client|
      %tr
        %td= client.name
        %td= number_to_currency client.doubt
        %td
          = link_to client, class: "ui button mini icon circular basic orange" do
            %i.icon.arrow.right

%br

= link_to 'Agregar Cliente', new_client_path, class: "ui button blue"
