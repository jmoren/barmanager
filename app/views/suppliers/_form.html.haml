= form_for @supplier, html: { class: "ui form"}  do |f|
  - if @supplier.errors.any?
    #error_explanation
      %h2= "#{pluralize(@supplier.errors.count, "error")} prohibited this supplier from being saved:"
      %ul
        - @supplier.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name, "Nombre"
    = f.text_field :name
  .field
    = f.label :address, "Direccion"
    = f.text_field :address
  .field
    = f.label :phone, "Telefono"
    = f.text_field :phone
  .actions
    %button.ui.button.green{type: "submit"}
      Guardar
    = link_to 'Cancelar', suppliers_path, class: "ui button"