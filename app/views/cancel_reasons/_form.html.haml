= form_for @cancel_reason, html: { class: "ui form"} do |f|
  - if @cancel_reason.errors.any?
    #error_explanation
      %h2= "#{pluralize(@cancel_reason.errors.count, "error")} prohibited this cancel_reason from being saved:"
      %ul
        - @cancel_reason.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :text
    = f.text_field :text
  .actions
    %button.ui.button.blue{type:"submit"}
      Guardar
    = link_to 'Volver', @cancel_reason.new_record? ? cancel_reasons_path : @cancel_reason, class: "ui button"
