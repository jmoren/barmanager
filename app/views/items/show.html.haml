%h2.ui.header
  = @item.description
.ui.divider
%p
  %b Precio:
  = number_to_currency @item.price
%p
  %b Stock:
  = @item.stock
%p
  %b Categoria:
  - if @item.category
    = link_to @item.category.name, @item.category
  - else
    Sin categoria

%p
  %b Codigo:
  = @item.code
.ui.divider
= link_to 'Edit', edit_item_path(@item), class: "ui button orange"
= link_to 'Back', items_path, class: "ui button"
