%h2.ui.header.left.floated
  Items
.ui.header.right.floated
  = link_to new_item_path, class: "ui button small teal" do
    %i.icon.plus
    Agregar Item

.ui.divider.clearing

%table.ui.table
  %thead
    %th Code
    %th Descripcion
    %th Precio (dia)
    %th Precio (noche)
    %th Stock
    %th Categoria
    %th
  %tbody
    - @items.each do |item|
      %tr
        %td= item.code
        %td= item.description.titleize
        %td= number_to_currency item.day_price
        %td= number_to_currency item.night_price
        %td= item.stock
        %td= link_to item.category.name, item.category
        %td
          = link_to edit_item_path(item) do
            %i.icon.edit
