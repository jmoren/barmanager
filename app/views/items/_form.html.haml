= form_for @item, html: { class: "ui form"} do |f|
  - if @item.errors.any?
    .ui.message.negative
      %ul.list
        - @item.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :description, "Descripcion"
    = f.text_field :description, placeholder: "Nombre o descripcion"
  .four.fields
    .field
      = f.label :price, "Precio (dia)"
      = f.text_field :day_price, placeholder: "Precio de dia"
    .field
      = f.label :night_price, "Precio (noche)"
      = f.text_field :night_price, placeholder: "Precio de noche"
    .field
      = f.label :stock
      = f.number_field :stock, placeholder: "Cantidad"
    .field
      = f.label :code, "Codigo"
      = f.number_field :code, placeholder: "Codigo acceso"
  .field
    = f.label :category_id, "Categoria"
    .ui.fluid.search.selection.dropdown.combo
      = f.hidden_field :category_id
      %i.dropdown.icon
      .default.text Seleccione Item
      .menu
        - Category.all.each do |category|
          .item{ data: { value: category.id } }
            = category.name
  .ui.divider
  .field
    %button.ui.button.small.green{type: "submit"}
      Guardar
    = link_to 'Cancelar', @item.new_record? ? items_path : @item, class: "ui button small"

:javascript
  $(document).ready(function(){
    $('.ui.form').form({
      description: {
        identifier: 'item_description',
        rules: [{
          type   : 'empty'
        }]
      },
      price: {
        identifier: 'item_price',
        rules: [
          {
            type   : 'empty'
          },
          {
            type: 'not[0]'
          }
        ]
      },
      night_price: {
        identifier: 'item_night_price',
        rules: [
          {
            type   : 'empty'
          },
          {
            type: 'not[0]'
          }
        ]
      },
      code: {
        identifier: 'item_code',
        rules: [
          {
            type   : 'empty'
          },
          {
            type: 'not[0]'
          }
        ]
      },
      stock: {
        identifier: 'item_stock',
        rules: [
          {
            type   : 'empty'
          },
          {
            type   : 'not[0]'
          }
        ]
      },
      cateogry: {
        identifier: 'item_category_id',
        rules: [
          {
            type   : 'empty'
          }
        ]
      },

    })
  })
