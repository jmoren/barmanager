<h2 class="ui header">
  <small><i class="icon sign in"></i></small>
  Ingreso
</h2>

<div class="ui divider"></div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "ui form"}) do |f| %>
  <div class="field">
    <%= f.label :login, "Email o usuario" %>
    <%= f.text_field :login, autofocus: true, placeholder: "Ingrese su email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off", placeholder: "Ingrese su contraseÃ±a" %>
  </div>

  <div class="field"><%= f.submit "Sign in", class: "ui button green fluid" %></div>
<% end %>

