= form_for @trend do |f|
  - if @trend.errors.any?
    #error_explanation
      %h2= "#{pluralize(@trend.errors.count, "error")} prohibited this trend from being saved:"
      %ul
        - @trend.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :country
    = f.text_field :country
  .field
    = f.label :phone
    = f.text_field :phone
  .field
    = f.label :email
    = f.text_field :email
  .actions
    = f.submit 'Save'
