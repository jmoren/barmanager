= form_for @shift do |f|
  - if @shift.errors.any?
    #error_explanation
      %h2= "#{pluralize(@shift.errors.count, "error")} prohibited this shift from being saved:"
      %ul
        - @shift.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label "Caja inicial"
    = f.number_field :opening_cash
  .actions
    = f.submit 'Abrir'
